<h1>New Objective</h1>

<%= form_for @objective do |f| %>
  <%= render partial: 'layouts/common/formerrors', locals: {object: @objective} %>

  <%= f.label "Name" %><br />
  <%= f.text_field :name %><br />

  <%= f.label "Description" %><br />
  <%= f.text_area :description %><br />

  <%= f.label "Target Goal" %><br />
  <%= f.number_field :targetgoal %><br />

  <%= f.label "Target Date" %><br />
  <%= f.date_field :targetdate %><br /><br />

  <%= f.submit %>
  
<% end %>
<h1><%= @objective.name %></h1><br />
<p><%= @objective.description %></p><br />
<p><%= @objective.target_date %></p><br />

<h2>Subojectives</h2>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Progress</th>
    <th>Change Progress</th>
    <th>Delete</th>
  </tr>
  <% @subobjectives.each do |o| %>
  <tr>
    <td><%= o[:name] %></td>
    <td><%= o[:description] %></td>
    <td><%= o[:progress] %></td>
    <td><%= link_to "Update Progress", new_subobjective_progress_path(o[:id]) %></td>
    <td><%= link_to "Delete", subobjective_path(o[:id]), method: :delete %></td>
  </tr>
  <% end %>
</table><br />
<%= link_to "Add a Subobjective", new_objective_subobjective_path(@objective) %>

<h2>All Progress</h2>
<%= render :partial => 'progresses/partials/progresstable', locals: {progresses: @progress} %>